{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": "tab",
    "max-nesting-depth": 5,
    "string-quotes": "single",
    "no-eol-whitespace": [true, {"ignore": ["empty-lines"]}],
    "max-empty-lines": 2,
    "declaration-no-important": true,
    "at-rule-no-unknown" : [true, {"ignoreAtRules": ["include", "extend", "mixin", "content", "for", "if"]}],
    "rule-empty-line-before": ["always-multi-line", {"ignore": ["after-comment", "inside-block"]}],
    "at-rule-empty-line-before": ["never", {"ignoreAtRules": ["mixin"]}],
    "selector-pseudo-element-colon-notation": "single",
    "declaration-block-single-line-max-declarations": 4,
    "block-no-empty": null,
    "color-hex-case": "upper",
    "color-hex-length": "long",
    "number-leading-zero": "always",
    "number-no-trailing-zeros": true,
    "selector-max-id": 1,
    "declaration-empty-line-before": null
  }
}
