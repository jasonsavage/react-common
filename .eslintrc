{
	"env": {
		"browser": true,
		"node": true,
		"jasmine": true
	},

	"extends": ["react-app", "plugin:flowtype/recommended"],

	"plugins": [
		"react",
		"flowtype"
	],

	"rules": {
		"strict": 0,

		// Possible Errors
		"no-console": 0,
		"no-debugger": 1,

		// Best Practices
		"block-scoped-var": 1,
		"consistent-return": 0,
		"curly": 1,
		"dot-notation": 1,
		"dot-location": [1, "property"],
		"eqeqeq": 1,
		"guard-for-in" : 1,
		"no-alert" : 1,
		"no-caller" : 1,
		"no-else-return" : 1,
		"no-empty-pattern": 1,
		"no-eq-null" : 1,
		"no-eval" : 1,
		"no-floating-decimal": 1,
		"no-extend-native" : 1,
		"no-invalid-this": 1,
		"no-iterator": 1,
		"no-labels" : 1,
		"no-lone-blocks": 1,
		"no-loop-func": 1,
		"no-multi-spaces": 0,
		"no-native-reassign": 1,
		"no-new": 1,
		"no-new-func": 1,
		"no-new-wrappers": 1,
		"no-octal": 1,
		"no-octal-escape": 1,
		"no-proto": 1,
		"no-redeclare": 1,
		"no-return-assign": 1,
		"no-script-url": 1,
		"no-self-compare": 1,
		"no-sequences": 1,
		"no-throw-literal": 1,
		"no-unused-expressions": 1,
		"no-useless-call": 1,
		"no-useless-concat": 1,
		"no-void": 1,
		"no-with": 1,
		"wrap-iife": 1,
		"yoda" : 1,

		// Variables
		"no-catch-shadow": 1,
		"no-unused-vars": 1,

		// Stylistic
		"array-bracket-spacing": [2, "never"],
		"block-spacing": 2,
		"brace-style": [2, "1tbs", { "allowSingleLine": true }],
		"camelcase": [2, { "properties": "never" }],
		"comma-spacing": [2, { "before": false, "after": true }],
		"consistent-this": [2, "self"],
		"eol-last": 2,
		"indent": [1, "tab", {"SwitchCase" : 1}],
		"jsx-quotes": [2, "prefer-double"],
		"key-spacing": [2, {"beforeColon": false, "afterColon": true}],
		"linebreak-style": [2, "unix"],
		"max-depth": [2, 4],
		"max-len": [2, 200, 2, {"ignoreComments": true}],
		"max-nested-callbacks": 2,
		"new-parens": 1,
		"no-spaced-func": 2,
		"no-unneeded-ternary": 2,
		"quotes": [2, "single"],
		"semi": [2, "always"],
		"semi-spacing": 2,
		"space-before-blocks": 2,
		"space-before-function-paren": 2,

		"new-cap": [1, {
			"capIsNewExceptions": [
				"Map",
				"List",
				"Record",
				"Set",
				"OrderedMap",
				"OrderedSet",
				"FESetInGameChatRoom",
				"FESetAuthToken",
				"FEGetSteamToken",
				"FEGetSteamUserId",
				"FEGetPlatformToken",
				"FEGetPlatformUserId",
				"FEGetAuthToken",
				"FEGetInGameChatRoom",
				"FEGetMatchmakingRegion",
				"FENavigateToPage",
				"FEGetMatchmakingHost",
				"FEGetMatchmakingPlayerName",
				"RequestUserOptions",
				"ApplyUserOptions",
				"FESetMatchmakingHost",
				"FESetMatchmakingVersion",
				"FESetMatchmakingClientType",
				"FESetGameEnvironment",
				"FESetMappedKey",
				"FESetMatchmakingForcedTeam",
				"OnAnimationComplete",
				"FESetUserInventory",
				"FESetMappedGamepadKey",
				"FESetIsFirstLaunch"
			],
			"newIsCapExceptions": [
				"connect"
			]
		}],

		// React
		"react/display-name": 0,
		"react/jsx-boolean-value": 0,
		"react/jsx-no-duplicate-props": 2,
		"react/jsx-no-undef": 1,
		"react/jsx-sort-props": 0,
		"react/sort-prop-types": 1,
		"react/jsx-uses-react": 1,
		"react/jsx-uses-vars": 1,
		"react/no-did-mount-set-state": 1,
		"react/no-did-update-set-state": 1,
		"react/no-multi-comp": 1,
		"react/no-unknown-property": 1,
		"react/prop-types": 1,
		"react/react-in-jsx-scope": 1,
		"react/self-closing-comp": 1,
		"react/sort-comp": 1,
		"react/jsx-wrap-multilines": 1
	},

	"globals": {

	}
}
